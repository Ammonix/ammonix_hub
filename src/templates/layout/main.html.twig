<!DOCTYPE html>
<html>
<head>
    {% block head %}
        {#<link rel="stylesheet" href="{{ base_url() }}/css/layout.css"/>#}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="{{ base_url() }}/css/materialize.min.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="{{ base_url() }}/images/favicon.png">
        <title>{% block title %}{% endblock %} - Ammonix</title>
    {% endblock %}
</head>
<body class="light-green lighten-2">

<header>
    {% block header %}
    {% endblock %}
</header>
<main>
    {% block main %}
    {% endblock %}
</main>
<footer class="page-footer light-green darken-2">
    {% block footer %}
    {% endblock %}
</footer>


{% block js %}
    <script type="text/javascript" src="{{ base_url() }}/js/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/js/materialize.min.js"></script>
{% endblock %}
</body>
</html>